# Global rules, override on case-by-case basis
[*]
charset = utf-8
indent_style = space
max_line_length = 180
tab_width = 2
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{vue,js,ts,scss}]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.svg]
insert_final_newline = false
